---
import { type CollectionEntry } from "astro:content";
import Project from "./Project.astro";

type Props = {
    projects: CollectionEntry<"projects">[];
};

const { projects } = Astro.props;
const sortedProjects = [...projects].sort((a, b) => {
    return new Date(b.originalDate) - new Date(a.originalDate);
});
---
<div>
    <h2 class="w-[15rem] uppercase dark:text-light mt-16">Featured Projects</h2>
    <div class="grid md:grid-cols-2 grid-cols-1 gap-4 my-16">
        {sortedProjects.map((project) => <Project project={project} />)}
    </div>
</div>
